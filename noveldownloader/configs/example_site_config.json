{
    "site_name": "my_example_site",
    "base_url": "http://www.examplefakedomain.com", 
    "start_url": "http://www.examplefakedomain.com/book/12345/", 
    "downloader_class": "ExampleDownloader", 
    "parser_class": "ExampleParser", 
    "headers": {
        "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36",
        "Accept-Language": "en-US,en;q=0.9,zh-CN;q=0.8,zh;q=0.7"
    },
    "proxies": null, 
    "download_delay": 1.5, 
    "max_retries": 3,
    "retry_delay": 5,

    "novel_title_selector": "h1.novel-title", 
    "chapter_list_selector": "ul.chapter-list li a", 
    "chapter_title_selector": "h2.chapter-name",
    "chapter_content_selector": "div#chapter-content-container", 
    "next_page_selector": "a.next-page-button",

    "chapter_splitting_enabled": false,
    "chapter_splitting_regex": "^(第[一二三四五六七八九十百千零〇\\d]+\\s*章\\s+.*)$",

    "output_options": {
        "format": "txt", 
        "encoding": "utf-8",
        "merge_chapters": false 
    },
    "cache_settings": {
        "enabled": true,
        "directory": "cache_data", 
        "expires_in_seconds": 86400 
    },
    "logging_settings": {
        "level": "INFO", 
        "log_file": "logs/downloader.log"
    }
} 